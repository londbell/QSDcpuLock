<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:gravity="center">

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="（非可视）"
		android:id="@+id/mainTextView4"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="控制开关↓"
		android:id="@+id/mainTextView1"/>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="cpu0"
		android:id="@+id/mainCheckBox1"/>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="cpu1"
		android:id="@+id/mainCheckBox2"/>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="cpu2"
		android:id="@+id/mainCheckBox3"/>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="cpu3"
		android:id="@+id/mainCheckBox4"/>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="cpu4"
		android:id="@+id/mainCheckBox5"/>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="cpu5"
		android:id="@+id/mainCheckBox6"/>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="cpu6"
		android:id="@+id/mainCheckBox7"/>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="cpu7"
		android:id="@+id/mainCheckBox8"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="附加选项↓"/>

	<Switch
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="自锁服务"
		android:id="@+id/mainSwitch1"/>

	<Switch
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="开机自启"
		android:id="@+id/mainSwitch2"/>

	<Button
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="开始执行关闭核心命令"
		android:id="@+id/mainButton1"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="紧急恢复↓"/>

	<Button
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="初始化/重启"
		android:id="@+id/mainButton2"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="点击这里查看说明书"
		android:id="@+id/mainTextView2"
		android:textColor="#FF0000"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="本软件需要root"
		android:layout_margin="10dp"
		android:id="@+id/mainTextView3"
		android:textColor="#0000FF"/>

</LinearLayout>

